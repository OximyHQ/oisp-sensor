<Window x:Class="OISPApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OISP Sensor Settings"
        Width="500"
        Height="450"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="True">
    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Padding" Value="5,3"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" FontSize="18" FontWeight="Bold" Margin="0,0,0,15">
            OISP Sensor Settings
        </TextBlock>

        <!-- Settings Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Output Settings -->
                <GroupBox Header="Output" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <TextBlock Style="{StaticResource LabelStyle}">Output File Path:</TextBlock>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="OutputPathTextBox" Grid.Column="0"/>
                            <Button Grid.Column="1" Content="Browse..." Margin="5,5,0,5" Padding="10,3" Click="BrowseOutput_Click"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- Capture Settings -->
                <GroupBox Header="Capture" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <CheckBox x:Name="TlsMitmCheckBox" Content="Enable TLS/HTTPS Interception (requires CA)"/>
                        <CheckBox x:Name="AiFilterCheckBox" Content="Only capture AI API traffic (recommended)"/>
                        <TextBlock Style="{StaticResource LabelStyle}" Margin="0,10,0,0">Process Filter (optional):</TextBlock>
                        <TextBox x:Name="ProcessFilterTextBox" ToolTip="Filter by process name, e.g., 'python.exe'. Leave empty for all processes."/>
                        <TextBlock Style="{StaticResource LabelStyle}" Margin="0,10,0,0">Proxy Port:</TextBlock>
                        <TextBox x:Name="ProxyPortTextBox" Width="100" HorizontalAlignment="Left"/>
                    </StackPanel>
                </GroupBox>

                <!-- Startup Settings -->
                <GroupBox Header="Startup" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <CheckBox x:Name="AutoStartCheckBox" Content="Start capture automatically when app launches"/>
                        <CheckBox x:Name="VerboseCheckBox" Content="Enable verbose logging"/>
                    </StackPanel>
                </GroupBox>

                <!-- Advanced Settings -->
                <GroupBox Header="Advanced" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <TextBlock Style="{StaticResource LabelStyle}">Sensor Executable:</TextBlock>
                        <TextBox x:Name="SensorPathTextBox"/>
                        <TextBlock Style="{StaticResource LabelStyle}" Margin="0,10,0,0">Redirector Executable:</TextBlock>
                        <TextBox x:Name="RedirectorPathTextBox"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Reset to Defaults" Padding="15,8" Margin="0,0,10,0" Click="ResetDefaults_Click"/>
            <Button Content="Cancel" Padding="15,8" Margin="0,0,10,0" Click="Cancel_Click"/>
            <Button Content="Save" Padding="15,8" IsDefault="True" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
